{
  "name": "storyforge",
  "version": "1.0.0",
  "description": "Kid-friendly AI-assisted narrative development platform",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "npm run build:backend && npm run build:frontend",
    "start:frontend": "cd src/frontend && npm run preview",
    "start:backend": "cd src/backend && npm run start",
    "dev:frontend": "cd src/frontend && npm run dev",
    "dev:backend": "cd src/backend && npm run dev",
    "build:frontend": "cd src/frontend && npm run build",
    "build:backend": "cd src/backend && npm run build",
    "install:all": "npm install && npm run install:frontend && npm run install:backend",
    "install:frontend": "cd src/frontend && npm install",
    "install:backend": "cd src/backend && npm install"
  },
  "keywords": [
    "ai",
    "storytelling",
    "narrative",
    "children",
    "education"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node-fetch": "^2.6.12",
    "@types/supertest": "^6.0.2",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "postcss": "^8.5.3",
    "supertest": "^7.0.0",
    "tailwindcss": "^4.0.9",
    "ts-jest": "^29.2.6"
  }
}
